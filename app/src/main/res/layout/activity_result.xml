<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Result">

    <!-- Groupe principal centré verticalement -->
    <LinearLayout
            android:id="@+id/centerGroup"
            android:layout_width="346dp"
            android:layout_height="331dp"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.565"
            app:layout_constraintVertical_bias="0.484">

        <!-- Prénom -->
        <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bonjour 'Prénom'"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="24dp"/>

        <!-- Score -->
        <TextView
                android:id="@+id/Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Votre Score est :"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="24dp"/>

        <!-- Message -->
        <TextView
                android:id="@+id/Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bravo !"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="32dp"/>

        <!-- Les deux boutons côte à côte -->
        <LinearLayout
                android:layout_width="306dp"
                android:layout_height="81dp"
                android:orientation="horizontal"
                android:gravity="center">

            <Button
                    android:id="@+id/Replay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:padding="12dp"
                    android:text="Rejouer"
                    android:layout_marginEnd="32dp"/>

            <Button
                    android:id="@+id/HomePage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp"
                    android:padding="12dp"
                    android:text="Accueil"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
